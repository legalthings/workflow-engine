{
    "$schema": "https://specs.letsflow.io/v0.3.0/scenario#",
    "title": "Basic system and user with update instructions",
    "actors": {
        "user": {
            "$schema": "http://json-schema.org/draft-07/schema#",
            "title": "User"
        },
        "organization": {
            "$schema": "http://json-schema.org/draft-07/schema#",
            "title": "Organization"
        }
    },
    "actions": {
        "step1": {
            "$schema": "https://specs.letsflow.io/v0.3.0/action/http#",
            "title": "Step1",
            "actor": "organization",
            "url": "https://www.example.com",
            "responses": {
                "ok": {
                    "update": [
                        {
                            "select": "foo",
                            "patch": true
                        },
                        {
                            "select": "baz",
                            "patch": true
                        },
                        {
                            "select": "bar",
                            "patch": false
                        }
                    ]
                },
                "error": { }
            }
        },
        "step2": {
            "$schema": "https://specs.letsflow.io/v0.3.0/action/nop#",
            "title": "Step2",
            "trigger_response": "ok",
            "data": "second response",
            "actors": ["organization", "user"],
            "responses": {
                "ok": {
                    "update": [
                        {
                            "select": "bar",
                            "patch": true
                        }
                    ]
                },
                "error": { }
            }
        },
        "step3": {
            "$schema": "https://specs.letsflow.io/v0.3.0/action#",
            "title": "Step3",
            "actor": "user",
            "responses": {
                "ok": {
                    "update": [
                        {
                            "select": "bar",
                            "patch": true,
                            "projection": "{id: test}"
                        }
                    ]
                },
                "cancel": { }
            }
        }
    },
    "states": {
        "initial": {
            "transitions": [
                {
                    "on": "step1.ok",
                    "goto": "second"
                },
                {
                    "on": "step1.error",
                    "goto": ":failed"
                }
            ]
        },
        "second": {
            "transitions": [
                {
                    "on": "step2.ok",
                    "goto": "third"
                },
                {
                    "on": "step2.error",
                    "goto": ":failed"
                }
            ]
        },
        "third": {
            "on": "step3",
            "goto": ":success"
        }
    }
}
