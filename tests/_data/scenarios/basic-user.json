{
    "$schema": "https://specs.letsflow.io/v0.3.0/scenario#",
    "title": "Basic user",
    "actors": {
        "user": {
            "$schema": "http://json-schema.org/draft-07/schema#",
            "title": "User"
        }
    },
    "actions": {
        "step1": {
            "$schema": "https://specs.letsflow.io/v0.3.0/action#",
            "title": "Step1",
            "actor": "user",
            "responses": {
                "ok": { },
                "cancel": { }
            }
        }
    },
    "states": {
        "initial": {
            "transitions": [
                {
                    "on": "step1.ok",
                    "goto": ":success"
                },
                {
                    "on": "step1.cancel",
                    "goto": ":failed"
                }

            ]
        }
    }
}
