{
    "$schema": "https://specs.letsflow.io/v0.3.0/scenario#",
    "actors": {
        "system": {
            "title": "System",
            "properties": {
                "identity": {
                    "type": "string",
                    "default": "bar_id"
                }
            }
        }
    },
    "actions": {
        "step1": {
            "$schema": "https://specs.letsflow.io/v0.3.0/action/http#",
            "display": true,
            "title": "Step1",
            "url": "https://www.example.com",
            "actor": "system",
            "responses": {
                "ok": { },
                "error": { }
            }
        },
        "step2": {
            "$schema": "https://specs.letsflow.io/v0.3.0/action/nop#",
            "display": true,
            "title": "Step2",
            "trigger_response": "ok",
            "data": "second response",
            "actor": "system",
            "responses": {
                "ok": { },
                "error": { }
            }
        }
    },
    "states": {
        "initial": {
            "transitions": [
                {
                    "on": "step1.ok",
                    "goto": "step2"
                },
                {
                    "on": "step1.error",
                    "goto": ":failed"
                }
            ]
        },
        "step2": {
            "transitions": [
                {
                    "on": "step2.ok",
                    "goto": ":success"
                },
                {
                    "on": "step2.error",
                    "goto": ":failed"
                }
            ]
        }
    }
}
