{
    "$schema": "https://specs.livecontracts.io/v1.0.0/scenario/schema.json#",
    "actors": {
        "user": {
            "title": "User"
        },
        "system": {
            "title": "System"
        }
    },
    "actions": {
        "step1": {
            "$schema": "https://specs.livecontracts.io/v1.0.0/action/http/schema.json#",
            "display": true,
            "title": "Step1",
            "actor": "system",
            "url": "https://www.example.com",
            "responses": {
                "ok": { },
                "error": { }
            }
        },
        "step2": {
            "$schema": "https://specs.livecontracts.io/v1.0.0/action/nop/schema.json#",
            "display": true,
            "title": "Step2",
            "trigger_response": "ok",
            "data": "second response",
            "actor": "system",
            "responses": {
                "ok": { },
                "error": { }
            }
        },
        "step3": {
            "display": true,
            "title": "Step3",
            "actor": "user",
            "responses": {
                "ok": { },
                "cancel": { }
            }
        }
    },
    "states": {
        ":initial": {
            "action": "step1",
            "transitions": [
                {
                    "action": "step1",
                    "response": "ok",
                    "transition": "step2"
                },
                {
                    "action": "step1",
                    "response": "error",
                    "transition": ":failed"
                }
            ]
        },
        "step2": {
            "action": "step2",
            "transitions": [
                {
                    "action": "step2",
                    "response": "ok",
                    "transition": "step3"
                },
                {
                    "action": "step2",
                    "response": "error",
                    "transition": ":failed"
                }
            ]
        },
        "step3": {
            "action": "step3",
            "transitions": [
                {
                    "action": "step3",
                    "response": "ok",
                    "transition": ":success"
                },
                {
                    "action": "step3",
                    "response": "cancel",
                    "transition": ":failed"
                }

            ]
        }
    }
}
